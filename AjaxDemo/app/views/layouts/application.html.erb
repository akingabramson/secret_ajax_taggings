<!DOCTYPE html>
<html>
<head>
  <title>AjaxDemo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

	<%= session[:session_token] %>

	<% if current_user %>
		<%= current_user.username %>
	<% else %>
		<%= link_to "login", new_session_url %>
	<% end  %>

	<hr />

  <%= yield %>
</body>
</html>
